    <h1>WELCOME <%= user.username %>, join the club by entering the secret passcode.</h1>
    <a href="/messages/join">join club</a>
    <a href="/users/log-out">LOG OUT</a>
  <% } else { %>
    <h1>please log in to access message board</h1>
  <%}%>
</body>
